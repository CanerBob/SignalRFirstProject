@model List<ResultContactViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_adminLayout.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Alanı İle İlgili İşlemleri Aşağıdan Görüntüleyebilirsiniz. 
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead> 
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-primary">Güncelle</a></td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
										<td></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">İletişim Alanı Düzenle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
