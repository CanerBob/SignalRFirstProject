@model UpdateContactViewModel
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/_adminLayout.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Güncelle</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Güncelle</div>
						</div>
						<input type="hidden" asp-for="ContactId">>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyon Giriniz</label>
								<input type="text" class="form-control" asp-for="Location" id="Location" placeholder="Lokasyon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Telefon Numaranız">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresi Giriniz</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Mail Adresiniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="FooterDescription">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İLetişim Bilgi Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

