@model UpdateReservationViewModel
@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/AdminLayout/_adminLayout.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="ReservationId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Ad Soyad">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Telefon Numarası">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Mail Adresiniz">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount" placeholder="Kişi Sayısı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Tarih</label>
								<input type="date" class="form-control" asp-for="Date" id="Date" placeholder="Rezervasyon Tarihi">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyon Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

