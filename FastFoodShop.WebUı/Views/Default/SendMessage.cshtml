@model CreateMessageViewModel
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Ulaşın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-controller="Default" asp-action="SendMessage">
                        <div>
                            <input type="text" class="form-control" asp-for="NameSurmane" placeholder="İsim Soyisim" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numarası" />
                        </div>
                        <div>
                            <input type="email" class="form-control" asp-for="Mail" placeholder="Email Adresi" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" rows="10" placeholder="Mesajınız" class="form-control"></textarea>
                        </div>
                        <div class="btn_box">
                            <button>
                                Mesaj Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
</section>